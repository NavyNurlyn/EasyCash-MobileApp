<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.MainActivity">

    <!-- Judul Aplikasi -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyCash Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Tombol Tambah Pesanan -->
    <Button
        android:id="@+id/btnAddTransaksi"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="30dp"
        android:text="Tambah Pesanan"
        android:textSize="18sp"
        android:drawableLeft="@drawable/coba2"
        android:drawablePadding="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:onClick="openAddPesanan" />

    <!-- Tombol Navigasi ke Daftar Produk -->
    <Button
        android:id="@+id/btnProductList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/btnAddTransaksi"
        android:layout_marginTop="20dp"
        android:text="Lihat Daftar Produk"
        android:textSize="18sp"
        android:drawableLeft="@drawable/coba3"
        android:drawablePadding="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:onClick="openProductList" />

    <!-- Tombol Navigasi ke Laporan -->
    <Button
        android:id="@+id/btnLaporan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/btnProductList"
        android:layout_marginTop="20dp"
        android:text="Lihat Laporan"
        android:textSize="18sp"
        android:drawableLeft="@drawable/img_menulaporan"
        android:drawablePadding="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:onClick="openPurchaseDetails" />

    <!-- Tombol Logout -->
    <Button
        android:id="@+id/btnAboutUs"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnLaporan"
        android:layout_marginTop="20dp"
        android:text="ABOUT US"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:onClick="openPurchaseDetails" />
    <!-- Tombol Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnAboutUs"
        android:layout_marginTop="10dp"
        android:text="Logout"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:onClick="openPurchaseDetails" />
</RelativeLayout>

